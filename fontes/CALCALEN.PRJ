	VALOR = RESULTADO
	
endif	
savekey()
SC_DEC = savescreen( 18, CALC_COL + 05, 21, CALC_COL + 26 )
@ 18, CALC_COL + 05 say "ษออออออออออออออออออป" color "N/W"
