	MEMORIA = MEMORIA + VALOR
	
elseif TECLA = 45

	MEMORIA = MEMORIA - VALOR
	
elseif TECLA = 42 .or. TECLA = 56

	MEMORIA = MEMORIA * VALOR
	
elseif TECLA = 47

	if VALOR > 0

		MEMORIA = MEMORIA / VALOR
	
	endif

endif	
