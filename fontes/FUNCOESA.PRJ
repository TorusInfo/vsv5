		if SENHA1 # S_1

			Mens_rerro(  " " + N_1 + ", sua senha est  errada", 30, "W+*/B" )

      else

         VOLTA = Nivel_acesso( NREG )

      endif   

   else

		Mens_rerro( " Funcion rio n„o cadastrado", 30, "W+*/B" )

	endif

endif	
set cursor   C_CUR
set confirm  C_CON
select T_AREA 
restscreen( 23, 00, 23, 79, L23 )
ACESSO = AC_ANT
return VOLTA

**************
function Senha
**************

set cursor ON
SENHA1 = ""
@ 23,50 say "Digite sua senha " color "W+/B"
for A = 1 to 4

	poscur( 23, 69+A )
	FF = inkey( 0 )
	if FF # 8

		@ 23,69+A say "*" color "W+/B"
		SENHA1 = SENHA1 + chr( FF )

	else

		if A > 1

			A = A - 1
			@ 23,69+A say " " color "W+/B"
			SENHA1 = _left( SENHA1, A - 1 )
			A = A - 1

		else

			SENHA1 = ""
			A = 0

		endif

	endif

next
set cursor OFF
return SENHA1



