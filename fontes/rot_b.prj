           endif
           @ DESC_LIN,DESC_COL say " "

       next

   next

enddo
clear typeahead
setcolor(  ANTES_COR )
set cursor TIPO_CURS
poscur( LIN_CURSOR, COL_CURSOR )
restscreen( 00, 00, 24, 79, DESC_TELA )

return

