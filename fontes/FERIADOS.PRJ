***************
function Codigo
***************

set softseek ON
select "CLIENTES"
set order to 3
select "FITAS"
set order to 2
set relation to FITAS->COD_CLI into "CLIENTES"
go top
seek "000001"
ver_printer()
@ 23,01 			SAY SPACE(78) COLOR "W/B"
@ 23,01 			SAY "<End>" COLOR "W+*/B"
@ 23,COL()+2 	SAY "-  Interrompe a impress„o " COLOR "W+/B"
PG = 1
Cabecalho()
if .not. eof()

	do while .not. eof()

		inkey()
		if lastkey() = 6 .or. nextkey() = 6

			return

		endif
		Imprime_relat()
		if .not. eof()
	
			skip

		endif
		
	enddo

endif
inkey()
if lastkey() = 6 .or. nextkey() = 6

	return

endif
lprint chr( 18 ) nolinefeed
eject
_bell()

return

