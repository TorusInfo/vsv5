*
FUNCTION ver_printer 
*
set printer to IMP_REL
@ 23,01	 	SAY SPACE(78) COLOR "W/B"
@ 23,01 		SAY "Ligue e posicione o papel da sua impressora " COLOR "W+/B"
@ 23,COL()	SAY "e tecle algo " COLOR "W+/B"
INKEY(0)
LPRINT CHR(15) NOLINEFEED
