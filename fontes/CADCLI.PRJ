**********************
procedure Telacli_save 
**********************


if empty( m->cpf_cli )

	SSS = savescreen( 23, 01, 23, 78 )
	@ 23,01 say space( 78 )
	@ 23,01 say  "Vocˆ n„o pode cadastrar um cliente sem o CPF" 
	_bell()
	inkey( 50 )
	restscreen( 23, 01, 23, 78, SSS )
	ERRO_OCOR = .T.
	return

endif
if imp_cpf="S" .and. .not. cpf( M->CPF_CLI )

	SSS = savescreen( 23, 01, 23, 78 )
	@ 23,01 say space( 78 )
	@ 23,01 say  "Este CPF est  errado !" 
	_bell()
	inkey( 50 )
	restscreen( 23, 01, 23, 78, SSS )
	ERRO_OCOR = .T.

endif


if .not. ENTER_ALTERACAO



*   regpronto = recno()
*	set order to 3
*	go bottom
*	ultcli = clientes->cod_cli	
*	go regpronto
	select 2
	use "CODCLIV"
	go 2
	rlock( 15 )
	replace CODCLIV->COD_CLI with str((val(CODCLIV->COD_CLI)+1),6,0,"0")
	unlock
	go 1
	if _left( CODCLIV->COD_CLI, 5 ) # "99999"

		newcli = codcliv->cod_cli
*		if ultcli > newcli
*			newcli = ultcli
*		endif
		COD_NOVO = 	_right("0000"+;
						alltrim( str( val( _left( newcli, 5 ) ) + 1 ) ), 5)


		rlock( 15 )
      replace CODCLIV->COD_CLI with COD_NOVO + mod11( COD_NOVO )
		unlock
		COD_CLI = CODCLIV->COD_CLI

	else

		go bottom
		if recno() > 2
		do while .t.

			COD_CLI = CODCLIV->COD_CLI
			select "CLIENTES"
			seek cod_cli
			go regpronto
			select "CODCLIV"
			if cod_cli = clientes->cod_cli

				rlock( 15 )
				delete
				unlock
				go bottom
				if recno() <= 2
					Mens_erro( "Faixa de c¢digo de cliente esgotada" )
					ERRO_OCOR = .T.
					exit
				endif
				loop

			else

				rlock( 15 )
				delete
				unlock
				exit

			endif

		enddo
		else

			Mens_erro( "Faixa de c¢digo de cliente esgotada" )
			ERRO_OCOR = .T.

		endif

	endif
	close "CODCLIV"
	MARCA = "*"

else

	COD_CLI = CLIENTES->COD_CLI

endif
select "CLIENTES"

return

