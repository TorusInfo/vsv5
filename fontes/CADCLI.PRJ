************************
procedure Telacli_delete 
************************

if CLIENTES->COD_CLI = "000000"

	ERRO_OCOR = .T.
	return

endif
select "FITAS"
ORD_FIT = indexord()
set order to 2
seek CLIENTES->COD_CLI
if found()

	SSS = savescreen(23,01,23,78)
	@ 23,01 	say space( 78 ) color "W/B"
	@ 23,01 	say "Vocˆ n„o pode deletar um cliente com fita locada !";
  					 color "W+/B"
	_bell()
	inkey(50)
	set order to ORD_FIT
	select "CLIENTES"
	restscreen(23,01,23,78,SSS)
	ERRO_OCOR = .T.
	
	return

endif
set order to ORD_FIT
select "CLIENTES"
select 2
use "CODCLIV"
flock( 15 )
append blank
unlock
rlock( 15 )
replace CODCLIV->COD_CLI with M->COD_CLI
unlock
go 2
rlock( 15 )
replace CODCLIV->COD_CLI with str((val( CODCLIV->COD_CLI) - 1 ),6,0,"0")
unlock
close
select "CLIENTES"

return

*********************
function Muda_cod_cli           && MUDA CODIGO DE CLIENTES
*********************

if ENTER_ALTERACAO .and. CLIENTES->COD_CLI # "000000"
		

	savekey()
   clear typeahead
	AREA = _select()
	select "FITAS"
	ORD_FITAS = indexord()
	set order to 2
	seek CLIENTES->COD_CLI
	if found()

		@ 23,01 say space( 78 ) color "W/B"
		@ 23,01 SAY "N„o posso alterar um c¢digo de cliente com fitas ";
						color "W+/B"
		_bell()
		_bell()
		inkey( 40 )
		Mens_rerro( "F3-Pesq F4-Ant F5-Pos F6-Alt.Cod F7-Fitas F8-Limpa F9-Del F10-Grava SF7-Filmes","W+/B")
		set order to ORD_FITAS
		select AREA
		restkey()

		return

	endif
   clear typeahead
	CONF_TEL = savescreen(09,30,16,43)
	Quadro( 09, 30, 15, 41, "W+/R,W+*/R,N,W+/R", "N+/N" )
	@ 10,31 say "  ALTERAR"
	@ 11,30 say "Ç" + replicate( "Ä", 10 ) + "¶"
	@ 12,31 say " Confirma"
	@ 13,30 say "Ç" + replicate( "Ä", 10 ) + "¶"
	set confirm OFF
	OP = 2
	@ 14,32 prompt "Sim"
	@ 14,37 prompt "N„o"
	_bell()
	menu to OP
	set confirm ON
   restscreen(09,30,16,43,CONF_TEL)
   set color to ENTER_COR
   if OP # 1	

		restkey()
      return

   endif
	select 2
	use "CODCLIV"
	flock( 15 )
	append blank
	unlock
	rlock( 15 )
	replace CODCLIV->COD_CLI with M->COD_CLI
	unlock
	go 1
	if _left(CODCLIV->COD_CLI,5) # "99999"

		COD_NOVO = 	_right("0000"+;
						alltrim(str( val( _left( CODCLIV->COD_CLI,5)) + 1 ) ), 5 )
		rlock( 15 )
      replace CODCLIV->COD_CLI with COD_NOVO + mod11( COD_NOVO )
		unlock
		select "CLIENTES"
		rlock( 15 )
		replace CLIENTES->COD_CLI with CODCLIV->COD_CLI
		unlock
		COD_CLI = CLIENTES->COD_CLI

	else

		go bottom
		if recno() > 2

			select "CLIENTES"
			rlock( 15 )
			replace CLIENTES->COD_CLI with CODCLIV->COD_CLI
			unlock
			COD_CLI = CLIENTES->COD_CLI
			rlock( 15 )
			delete
			unlock

		else

			Mens_erro( "Faixa de c¢digo de cliente esgotada" )
			ERRO_OCOR = .T.

		endif

	endif
	select "CLIENTES"
	VAI_GET = gotoget()
	keyboard 21 , 21 , 18

endif
restkey()

return

