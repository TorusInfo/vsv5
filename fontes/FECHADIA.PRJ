      num_bol = MOVIMEN->BOLETO_NUM
      qtd_bol = qtd_bol + 1
      SELECT "CLIENTES"
      SEEK MOVIMEN->COD_CLI
      IF .NOT. FOUND()

         rel_cod = SPACE(6)
         rel_cli = SPACE(32)

      ELSE
         rel_cod = CLIENTES->COD_CLI
         rel_cli = CLIENTES->NOME

      ENDIF
      SELECT "MOVIMEN"
      IF rel_lin = 5

         rel_cab(rel_nome,rel_pag)

      ENDIF
