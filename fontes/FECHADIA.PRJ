set margin  to IMP_LEFT
set softseek OFF
select "MOVIMEN"
seek REL_LISTA
if .not. found()

   mens_erro("N„o houve "+REL_NOME+" no dia "+dtoc(_date()))
	_bell()
	inkey( 02 )
	@ 23,01 SAY SPACE(78) COLOR "W/B"
	return

