lprint "----------------------------------------------------------------------"
go 2
do while .not. eof()

	if upper( alltrim( MES->DADOS ) ) # "PRODUTOS"

   	TOT_GEN = MES->RET_FIT + MES->EST_FIT + ;
		          MES->AUT_FIT + MES->DEV_FIT
